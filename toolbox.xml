    <block type="go_to"></block>
    <block type="glide_to"></block>
    <block type="point_towards"></block>
    <block type="set_x_y"></block>
    <block type="change_x_by"></block>
    <block type="change_y_by"></block>
  </category>

  <category name="Looks" colour="#9966FF">
